<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llBottomConfRequest"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal|bottom"
    android:layout_marginLeft="@dimen/_10sdp"
    android:layout_marginRight="@dimen/_10sdp"
    android:layout_marginBottom="@dimen/_5sdp"
    android:background="@drawable/round_corner_bg"
    android:orientation="vertical"
    android:padding="@dimen/_15sdp">

    <ImageView
        android:id="@+id/imgBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_5sdp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:src="@drawable/ic_back"
        android:tint="@color/colorOrange"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:gravity="center">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"
            android:padding="@dimen/_5sdp"
            android:text="Number of Passengers :"
            android:textColor="@color/colorOrange"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/_35sdp"
            android:layout_margin="@dimen/_3sdp"
            android:layout_weight="0.8"

            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvMinus"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/round_corner_minus"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                android:gravity="center"
                android:text="-"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_20sdp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvNumOfPassenger"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_toLeftOf="@+id/tvPlus"
                android:layout_toRightOf="@+id/tvMinus"
                android:background="#e6aa80"
                android:gravity="center"
                android:maxLength="2"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_20sdp"
                android:textStyle="bold" />

            <TextView

                android:id="@+id/tvPlus"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/round_corner_plus"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                android:gravity="center"
                android:text="+"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_20sdp"
                android:textStyle="bold" />
        </RelativeLayout>
    </LinearLayout>

    <EditText
        android:id="@+id/edtDriverNote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:alpha="0.8"
        android:background="#c55ecdf5"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        android:gravity="center"
        android:hint="Include any notes for your driver"
        android:minHeight="@dimen/_60sdp"
        android:padding="@dimen/_5sdp"
        android:textSize="@dimen/_13sdp" />

    <TextView
        android:id="@+id/tvConfirmRequest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:background="@drawable/round_corner_bg_green"
        android:clickable="true"
        android:gravity="center"
        android:padding="@dimen/_8sdp"
        android:text="Confirm Request"
        android:textColor="@color/colorWhite" />
</LinearLayout>